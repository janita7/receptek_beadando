<div class="page-header">
    <h1>Új recept felvitele</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationRecipes.cim}}
                has-error
            {{/if}}
        ">
            <label for="cim" class="col-lg-2 control-label">Cím</label>
            <div class="col-lg-10">
                <input class="form-control" id="cim" name="cim" type="text" value="{{data.cim}}">
                {{#if validationRecipes.cim}}
                    <span class="help-block">{{validationRecipes.cim.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationRecipes.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{data.leiras}}</textarea>
                <span class="help-block">Meg kell adni a címet és a leírást is.</span>
                {{#if validationRecipes.leiras}}
                    <span class="help-block">{{validationRecipes.leiras.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button type="submit" class="btn btn-primary">Mentés</button>
            </div>
        </div>
    </fieldset>
</form>        